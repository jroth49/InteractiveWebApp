<%- include('header.ejs')%>

        <main>
            <div class = "content">
                <form action = '/stories' method = 'POST'>
                    <table>
                        <tr>
                            <td><label for="title">Title</label></td>
                            <td><input type="text" id="title" name="title" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td class = "align-top"><label for="content">Content</label></td>
                            <td><textarea rows="5" id="content" name="content" class = "fixed-width"></textarea></td>
                        </tr>
                        <tr>
                            <td><label for="startTime" >Start Time</label></td>
                            <td><input type="text" id="startTime" name="startTime" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td><label for="endTime" >End Time</label></td>
                            <td><input type="text" id="endTime" name="endTime" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td><label for="location" >Location</label></td>
                            <td><input type="text" id="location" name="location" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td><label for="host" >Hosted By</label></td>
                            <td><input type="text" id="host" name="host" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td><label for="category" >Category</label></td>
                            <td><input type="text" id="category" name="category" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td colspan="2" class = "align-right"><button>Submit</button></td>
                        </tr>
                    </table>        
                </form>
            
                </div>
        </main>
